<section id="join-us" class="py-20 bg-white text-[#6f2dbd]">
    <div class="container mx-auto px-4 max-w-md">
      <h2 class="section-title text-center">Únete al movimiento</h2>
      <form class="space-y-6" action="/api/join" method="POST">
        <div>
          <label for="name" class="block text-sm font-medium text-[#6f2dbd]">Nombre</label>
          <input type="text" id="name" name="name" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#f46036] focus:ring focus:ring-[#f46036] focus:ring-opacity-50">
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-[#6f2dbd]">Email</label>
          <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#f46036] focus:ring focus:ring-[#f46036] focus:ring-opacity-50">
        </div>
        <div>
          <label for="phone" class="block text-sm font-medium text-[#6f2dbd]">Teléfono</label>
          <input type="tel" id="phone" name="phone" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#f46036] focus:ring focus:ring-[#f46036] focus:ring-opacity-50">
        </div>
        <div>
          <label for="interests" class="block text-sm font-medium text-[#6f2dbd]">Intereses</label>
          <select id="interests" name="interests" multiple class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#f46036] focus:ring focus:ring-[#f46036] focus:ring-opacity-50">
            <option value="education">Educación</option>
            <option value="health">Salud</option>
            <option value="environment">Medio Ambiente</option>
            <option value="economy">Economía</option>
            <option value="social-justice">Justicia Social</option>
          </select>
        </div>
        <button type="submit" class="w-full btn btn-primary">Enviar</button>
      </form>
    </div>
  </section>
  
  <style>
    input:focus, select:focus {
      outline: none;
      border-color: var(--color-naranja);
      box-shadow: 0 0 0 2px rgba(244, 96, 54, 0.2);
    }
  </style>
  
  